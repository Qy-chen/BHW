<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bingsum.mapper.CarModelMapper">

    <select id="getCarModelInfoList" resultType="com.bingsum.util.ParaData">
        select * from car_model where delete_time is null
    </select>

    <select id="getCarModelInfo" resultType="com.bingsum.util.ParaData">
        select * from car_model where delete_time is null and id=#{id}
    </select>

    <insert id="newCarModelInfo" parameterType="com.bingsum.util.ParaData">
        insert into car_model(name,seat_count,chartered_price,carpooling_price) values (#{name},#{seat_count},#{chartered_price},#{carpooling_price});
    </insert>

    <update id="setCarModelInfo" parameterType="com.bingsum.util.ParaData">
        update car_model set name = #{name},seat_count = #{seat_count},chartered_price = #{chartered_price},carpooling_price = #{carpooling_price} where id = #{id};
    </update>

    <delete id="delCarModel" parameterType="com.bingsum.util.ParaData">
        delete from car_model where id = #{id};
    </delete>

    <select id="getCarModelBriefInfo" resultType="com.bingsum.util.ParaData">
        select id,name from car_model
    </select>

</mapper>