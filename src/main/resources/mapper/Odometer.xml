<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bingsum.mapper.OdometerMapper">
    
    <select id="getOdometerInfoList" resultType="com.bingsum.util.ParaData" >
        select * from odometer order by time desc
    </select>

    <select id="getOdometerInfo" resultType="com.bingsum.util.ParaData" >
        select * from odometer where time &lt;NOW() order by time desc limit 1
    </select>

    <insert id="newOdometerInfo" parameterType="com.bingsum.util.ParaData" >
        insert into odometer (mileage,time) values (#{mileage},#{time});
    </insert>

    <update id="delOdometer" parameterType="com.bingsum.util.ParaData" >
        update odometer set delete_time = NOW() where id = #{id};
    </update>

</mapper>